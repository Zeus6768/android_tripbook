<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/main_right_drawer_close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_home_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/main_right_drawer_ic_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_home_hashtag"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/main_right_drawer_comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키워드에 해당되는\n나의 지난 여행을 모아볼 수 있어요."
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/notosans_kr_medium"
        app:layout_constraintTop_toBottomOf="@id/main_right_drawer_ic_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_base_main_2_fill"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/main_right_drawer_comment_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_home_search"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="S E A R C H                                    "
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="12sp"
            android:background="@null"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>