<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--상단 바-->
    <include
        layout="@layout/layout_topbar_base"
        android:id="@+id/tripcourse_select_country_search_topbar_layout" />


    <LinearLayout
        android:id="@+id/tripcourse_select_country_search_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/tripcourse_select_country_search_topbar_layout"

        >
        <EditText
            android:id="@+id/tripcourse_select_search_search_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="검색하려는 장소를 입력해주세요"
            android:textSize="11sp"
            android:inputType="text"
            />

        <Button
            android:id="@+id/tripcourse_select_search_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_base_main_1_fill"
            android:gravity="center"
            android:text="검색"
            android:textSize="11sp"
            android:fontFamily="@font/gmarket_sans_bold"
            android:includeFontPadding="false" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="25dp"
        android:orientation="vertical"
        tools:listitem="@layout/item_tripcourse_select_country_lists"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tripcourse_select_country_search_search_layout"
        app:layout_constraintBottom_toTopOf="@id/tripcourse_select_country_search_complete_layout"/>

    <!--선택 완료 바-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tripcourse_select_country_search_complete_layout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <!--선택 완료 버튼-->
        <Button
            android:id="@+id/tripcourse_select_country_select_complete_btn"
            android:layout_width="228dp"
            android:layout_height="43dp"
            android:background="@drawable/bg_base_main_1_fill"
            android:gravity="center"
            android:text="@string/tripcourse_select_complete"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>