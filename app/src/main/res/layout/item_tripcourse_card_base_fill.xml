<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="151dp"
        android:layout_height="235dp"
        android:padding="0dp"
        android:background="@drawable/bg_base_gray_empty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/item_card_fill_cover_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/item_card_fill_cover_img"
                android:src="@drawable/img_tripcourse_card_ex"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/item_card_fill_divitionline_view"
            android:layout_width="134dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/item_card_fill_cover_cardview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <LinearLayout
            android:id="@+id/item_card_fill_titlebar_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@id/item_card_fill_divitionline_view"
            app:layout_constraintStart_toStartOf="@id/item_card_fill_cover_cardview"
            app:layout_constraintEnd_toEndOf="@id/item_card_fill_cover_cardview">

            <View
                android:layout_width="5dp"
                android:layout_height="12dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="4dp"
                android:background="@color/tripbook_main_1"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_card_fill_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textSize="11sp"
                    android:fontFamily="@font/notosans_kr_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:id="@+id/item_card_fill_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:textSize="8sp"
                    android:fontFamily="@font/notosans_kr_regular"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/item_card_fill_divitionline2_view"
            android:layout_width="90dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/item_card_fill_titlebar_layout"
            app:layout_constraintStart_toStartOf="@id/item_card_fill_titlebar_layout"
            />

        <TextView
            android:id="@+id/item_card_fill_body_tv"
            android:text="@string/tripcourse_record_request"
            android:textSize="8sp"
            android:gravity="start"
            android:layout_width="128dp"
            android:layout_height="24dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/item_card_fill_titlebar_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>