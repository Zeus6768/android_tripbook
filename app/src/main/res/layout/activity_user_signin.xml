<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/signin_title_underscore_view"
        android:layout_width="5dp"
        android:layout_height="60dp"
        android:background="@color/tripbook_main_1"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toTopOf="@id/signin_signin_btn_iv"
        app:layout_constraintStart_toStartOf="@id/signin_signin_btn_iv"/>

    <TextView
        android:id="@+id/signin_title_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/app_slogan"
        android:textColor="@color/tripbook_main_1"
        android:textSize="14sp"
        android:fontFamily="@font/gmarket_sans_light"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="@id/signin_title_underscore_view"
        app:layout_constraintStart_toStartOf="@id/signin_title_underscore_view"/>

    <TextView
        android:id="@+id/signin_title_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/app_name_uppercase"
        android:textColor="@color/tripbook_main_1"
        android:textSize="40sp"
        android:fontFamily="@font/gmarket_sans_bold"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/signin_title_underscore_view"
        app:layout_constraintStart_toStartOf="@id/signin_title_underscore_view"/>

    <ImageView
        android:id="@+id/signin_signin_btn_iv"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_signin_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_width="183dp"
        android:layout_height="45dp"
        android:background="@drawable/img_signin_kakao_login"
        app:layout_constraintTop_toTopOf="@+id/signin_signin_btn_iv"
        app:layout_constraintBottom_toBottomOf="@+id/signin_signin_btn_iv"
        app:layout_constraintStart_toStartOf="@+id/signin_signin_btn_iv"
        app:layout_constraintEnd_toEndOf="@+id/signin_signin_btn_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>