<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        layout="@layout/layout_topbar_base"
        android:id="@+id/tripcourse_select_hashtag_topbar_layout"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tripcourse_select_hashtag_topbar_layout"
        app:layout_constraintBottom_toTopOf="@id/tripcourse_select_hashtag_select_complete_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!--설명 창-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tripcourse_select_hashtag_explain_layout"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                >

                <LinearLayout
                    android:layout_width="292dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="25dp"
                    android:gravity="center"
                    android:background="@drawable/bg_base_main_4_empty"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="3dp"
                        android:text="@string/tripcourse_select_hashtag_explain1"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:fontFamily="@font/notosans_kr_regular"
                        android:includeFontPadding="false"
                        tools:ignore="SmallSp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="3dp"
                        android:text="@string/tripcourse_select_hashtag_explain2"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:fontFamily="@font/notosans_kr_regular"
                        android:includeFontPadding="false"
                        tools:ignore="SmallSp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="3dp"
                        android:text="@string/tripcourse_select_hashtag_explain3"
                        android:textSize="9sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:fontFamily="@font/notosans_kr_regular"
                        android:includeFontPadding="false"
                        tools:ignore="SmallSp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--해시태그 선택 창-->
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tripcourse_select_hashtag_explain_layout"
                app:layout_constraintBottom_toBottomOf="parent">

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!--선택 완료 바-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tripcourse_select_hashtag_select_complete_layout"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <!--선택 완료 버튼-->
        <Button
            android:id="@+id/tripcourse_select_hashtag_select_complete_btn"
            android:layout_width="228dp"
            android:layout_height="43dp"
            android:background="@drawable/bg_base_main_1_fill"
            android:gravity="center"
            android:text="@string/tripcourse_select_complete"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>