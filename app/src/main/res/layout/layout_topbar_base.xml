<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:paddingTop="20dp"
    android:paddingHorizontal="20dp"
    >

    <ImageView
        android:id="@+id/topbar_back_ib"
        android:src="@drawable/img_back_basic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/topbar_title_layout"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/topbar_subbutton_ib"
        android:src="@drawable/img_home_basic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/topbar_back_ib"
        />

    <LinearLayout
        android:id="@+id/topbar_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="17dp"
        >

        <TextView
            android:id="@+id/topbar_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topbar_title"
            android:textSize="21sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:id="@+id/topbar_subtitle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topbar_subtitle"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosans_kr_regular"
            android:includeFontPadding="false"
            android:visibility="visible"/>
    </LinearLayout>

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>