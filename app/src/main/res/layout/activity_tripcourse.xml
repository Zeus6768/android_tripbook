<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--상단 바-->
    <include
        layout="@layout/layout_topbar_base"
        android:id="@+id/tripcourse_topbar_layout" />

    <!--메인 앨범 창-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tripcourse_topbar_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--타이틀 바-->
            <FrameLayout
                android:id="@+id/tripcourse_titlebar_layout"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/img_titlebar_basic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="25dp"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tripcourse_titlebar_period_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/notosans_kr_regular"
                        android:includeFontPadding="false"
                        android:text="@string/tripcourse_titlebar_date"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tripcourse_titlebar_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_kr_bold"
                        android:includeFontPadding="false"
                        android:text="@string/tripcourse_titlebar_title"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </LinearLayout>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <!--앨범 리스트-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <View
                    android:id="@+id/tripcourse_card1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="start"
                    android:background="@color/black"/>

                <include
                    layout="@layout/item_tripcourse_album_right"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />

                <include
                    layout="@layout/item_tripcourse_album_left_top"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    />

                <include
                    android:id="@+id/tripcourse_card2"
                    layout="@layout/item_tripcourse_album_right_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start" />

                <include
                    layout="@layout/item_tripcourse_album_top"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!--카드 추가하기-->
    <FrameLayout
        android:id="@+id/tripcourse_add_album_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:backgroundTint="@color/tripbook_main_1"
                app:cardCornerRadius="15dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="52dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:drawableTop="@drawable/drawable_img_plus_white"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="@string/tripcourse_add_card"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:fontFamily="@font/notosans_kr_bold"
            android:includeFontPadding="false"
            tools:ignore="SmallSp,UseCompatTextViewDrawableXml" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>